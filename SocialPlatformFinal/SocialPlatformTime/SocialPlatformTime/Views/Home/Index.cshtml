@{
    ViewData["Title"] = "Home - SocialPlatformTime";
}

<!-- Hero Section cu imagine de fundal -->
<div class="hero-section position-relative overflow-hidden">
    <div class="hero-background"></div>
    <div class="hero-overlay"></div>
    <div class="container position-relative py-5">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6 text-white">
                <h1 class="display-3 fw-bold mb-4 animate-fade-in text-mint">
                    Welcome to SocialPlatformTime!
                </h1>
                <p class="lead mb-4 fs-4 animate-slide-up text-mint">
                    Connect with friends, share your thoughts, and discover amazing content.
                    Join our vibrant community today!
                </p>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="d-flex gap-3 animate-fade-in-delay">
                        <a class="btn btn-success btn-lg px-4 py-3 shadow-lg hover-lift" asp-controller="Posts" asp-action="Index">
                            <i class="bi bi-grid me-2"></i> View Posts
                        </a>
                        <a class="btn btn-outline-light btn-lg px-4 py-3 hover-lift" asp-controller="Posts" asp-action="New">
                            <i class="bi bi-plus-circle me-2"></i> Create Post
                        </a>
                    </div>
                }
                else
                {
                    <div class="d-flex gap-3 animate-fade-in-delay">
                        <a class="btn btn-success btn-lg px-4 py-3 shadow-lg hover-lift" asp-area="Identity" asp-page="/Account/Register">
                            <i class="bi bi-person-plus me-2"></i> Sign Up
                        </a>
                        <a class="btn btn-outline-light btn-lg px-4 py-3 hover-lift" asp-area="Identity" asp-page="/Account/Login">
                            <i class="bi bi-box-arrow-in-right me-2"></i> Login
                        </a>
                    </div>
                }
            </div>
            <div class="col-lg-6 text-center">
                <div class="floating-icons">
                    <i class="bi bi-heart-fill icon-float icon-1"></i>
                    <i class="bi bi-chat-dots-fill icon-float icon-2"></i>
                    <i class="bi bi-share-fill icon-float icon-3"></i>
                    <i class="bi bi-people-fill icon-float icon-4"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="wave-divider">
        <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
