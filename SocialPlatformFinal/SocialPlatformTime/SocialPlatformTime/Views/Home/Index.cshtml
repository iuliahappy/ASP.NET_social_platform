<!-- Features Section cu carduri colorate -->
<div class="container mb-5 py-5">
    <div class="row text-center mb-5">
        <div class="col-12">
            <h2 class="display-4 fw-bold mb-3">Why SocialPlatformTime?</h2>
            <p class="text-muted fs-5">Discover what makes our platform special</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="feature-card card-1 h-100 shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <div class="feature-icon mb-4">
                        <i class="bi bi-chat-dots"></i>
                    </div>
                    <h4 class="card-title fw-bold mb-3">Share Your Thoughts</h4>
                    <p class="card-text">
                        Post your ideas, photos, and videos. Express yourself freely and connect with others.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="feature-card card-2 h-100 shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <div class="feature-icon mb-4">
                        <i class="bi bi-heart"></i>
                    </div>
                    <h4 class="card-title fw-bold mb-3">React & Engage</h4>
                    <p class="card-text">
                        Like posts, comment on discussions, and interact with the community in meaningful ways.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="feature-card card-3 h-100 shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <div class="feature-icon mb-4">
                        <i class="bi bi-people"></i>
                    </div>
                    <h4 class="card-title fw-bold mb-3">Build Connections</h4>
                    <p class="card-text">
                        Follow friends, join groups, and build a network of people who share your interests.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action Section -->
@if (User.Identity?.IsAuthenticated == true)
{
    <div class="cta-section py-5">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-12">
                    <h3 class="display-5 fw-bold text-white mb-4">Ready to get started?</h3>
                    <a class="btn btn-success btn-lg px-5 py-3 shadow-lg hover-lift" asp-controller="Posts" asp-action="New">
                        <i class="bi bi-plus-circle me-2"></i> Create Your First Post
                    </a>
                </div>
            </div>
        </div>
    </div>
}

<!-- Custom CSS -->
<style>
    /* Hero Section cu nuanțe medii */
    .hero-section {
        min-height: 90vh;
        background: linear-gradient(135deg, #9d7fd9 0%, #b89ae8 50%, #7bc87a 100%);
        position: relative;
        overflow: hidden;
    }

    .hero-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.15) 0%, transparent 50%), radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.15) 0%, transparent 50%), radial-gradient(circle at 40% 20%, rgba(255, 255, 255, 0.15) 0%, transparent 50%);
        animation: backgroundMove 20s ease-in-out infinite;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.15);
    }

    .wave-divider {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 120px;
        color: white;
        overflow: hidden;
    }

        .wave-divider svg {
            width: 100%;
            height: 100%;
        }

    /* Animații pentru text */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes backgroundMove {
        0%, 100% {
            transform: translate(0, 0);
        }

        50% {
            transform: translate(-20px, -20px);
        }
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px) rotate(0deg);
        }

        50% {
            transform: translateY(-30px) rotate(10deg);
        }
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.1);
        }
    }

    .animate-fade-in {
        animation: fadeIn 1s ease-out;
    }

    .animate-slide-up {
        animation: slideUp 1s ease-out 0.3s both;
    }

    .animate-fade-in-delay {
        animation: fadeIn 1s ease-out 0.6s both;
    }

    /* Floating Icons cu nuanțe medii */
    .floating-icons {
        position: relative;
        height: 400px;
    }

    .icon-float {
        position: absolute;
        font-size: 4rem;
        color: rgba(255, 255, 255, 0.9);
        animation: float 3s ease-in-out infinite;
    }

    .icon-1 {
        top: 10%;
        left: 20%;
        animation-delay: 0s;
        color: #ff8a95;
    }

    .icon-2 {
        top: 30%;
        right: 20%;
        animation-delay: 0.5s;
        color: #6bc5d4;
    }

    .icon-3 {
        bottom: 30%;
        left: 30%;
        animation-delay: 1s;
        color: #7bc87a;
    }

    .icon-4 {
        bottom: 10%;
        right: 30%;
        animation-delay: 1.5s;
        color: #7dd3a0;
    }

    /* Feature Cards cu nuanțe medii, dar text alb pentru contrast */
    .feature-card {
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border-radius: 20px;
        overflow: hidden;
        position: relative;
    }

        .feature-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, transparent 0%, rgba(255,255,255,0.15) 100%);
            opacity: 0;
            transition: opacity 0.3s;
        }

        .feature-card:hover::before {
            opacity: 1;
        }

        .feature-card:hover {
            transform: translateY(-15px) scale(1.02);
            box-shadow: 0 20px 40px rgba(0,0,0,0.25) !important;
        }

    .card-1 {
        background: linear-gradient(135deg, #9d7fd9 0%, #b89ae8 100%);
        color: white;
    }

    .card-2 {
        background: linear-gradient(135deg, #7bc87a 0%, #95d494 100%);
        color: white;
    }

    .card-3 {
        background: linear-gradient(135deg, #6bb6ff 0%, #8cc8ff 100%);
        color: white;
    }

    .feature-icon {
        font-size: 4rem;
        animation: pulse 2s ease-in-out infinite;
    }

        .feature-icon i {
            filter: drop-shadow(0 4px 8px rgba(0,0,0,0.2));
        }

    /* Gradient Text cu nuanțe medii */
    .gradient-text {
        background: linear-gradient(135deg, #9d7fd9 0%, #b89ae8 50%, #7bc87a 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Butoane cu hover effect */
    .hover-lift {
        transition: all 0.3s ease;
    }

        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.3) !important;
        }

    /* CTA Section cu nuanțe medii */
    .cta-section {
        background: linear-gradient(135deg, #9d7fd9 0%, #7bc87a 100%);
        border-radius: 30px 30px 0 0;
        margin-top: 5rem;
    }

    .text-mint {
        color: #E0FFFF;
    }
    /* Responsive */
    @@media (max-width: 768px) {
        .hero-section {
            min-height: 70vh;
        }

        .floating-icons {
            height: 200px;
        }

        .icon-float {
            font-size: 2rem;
        }
    }
</style>