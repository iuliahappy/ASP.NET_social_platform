@model SocialPlatformTime.Models.Post
@{
    ViewData["Title"] = "Create New Post";
}

<style>
    .text-image-video {
        color: #00008B !important;
    }
</style> 


<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-plus-circle"></i> Create New Post
                    </h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="New" asp-controller="Posts" enctype="multipart/form-data">
                        @* @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <div>@error.ErrorMessage</div>
                                }
                            </div>
                        } *@
                        @* nou *@
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <p>@error.ErrorMessage</p>
                                }
                            </div>
                        }
                        @* nou *@
                        <!-- Post Description -->
                        <div class="mb-3">
                            <label asp-for="PostDescription" class="form-label fw-bold">
                                Post Description
                            </label>
                            <textarea asp-for="PostDescription" class="form-control" rows="4"
                                      placeholder="What's on your mind?"></textarea>
                        </div>

                        <!-- Text Content -->
                        <div class="mb-3">
                            <label asp-for="TextContent" class="form-label fw-bold">
                                Text Content
                            </label>
                            <textarea asp-for="TextContent" class="form-control" rows="6"
                                      placeholder="Add additional text content (optional)"></textarea>
                        </div>

                        <!-- Image -->
                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label fw-bold">Upload image</label>
                            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                            <small class="form-text text-muted text-image-video">Select a photo from your computer.</small>
                        </div>


                        <!-- Upload video -->
                        <div class="mb-3">
                            <label asp-for="VideoFile" class="form-label fw-bold">Upload video</label>
                            <input asp-for="VideoFile" type="file" class="form-control" accept="video/*" />
                            <small class="form-text text-muted text-image-video" c>Supported formats: mp4, webm, etc.</small>
                        </div>


                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" asp-controller="Posts" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Post
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>