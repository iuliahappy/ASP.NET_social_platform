<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SocialPlatformTime</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<style>
    /* Feature Cards cu culori mai deschise și vizibile */
    .feature-card {
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border-radius: 20px;
        overflow: hidden;
        position: relative;
        border: 2px solid rgba(255, 255, 255, 0.3);
    }

        .feature-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0.05) 100%);
            opacity: 0;
            transition: opacity 0.3s;
        }

        .feature-card:hover::before {
            opacity: 1;
        }

        .feature-card:hover {
            transform: translateY(-15px) scale(1.02);
            box-shadow: 0 20px 40px rgba(0,0,0,0.3) !important;
            border-color: rgba(255, 255, 255, 0.6);
        }

    /* Carduri cu fundal deschis și text întunecat */
    .card-1 {
        background: linear-gradient(135deg, #a8c0ff 0%, #c5b9ff 100%);
        color: #1a1a2e;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
    }

    .card-2 {
        background: linear-gradient(135deg, #a8e063 0%, #d4fc79 100%);
        color: #1a1a2e;
        box-shadow: 0 10px 30px rgba(86, 171, 47, 0.4);
    }

    .card-3 {
        background: linear-gradient(135deg, #7dd3fc 0%, #bae6fd 100%);
        color: #1a1a2e;
        box-shadow: 0 10px 30px rgba(79, 172, 254, 0.4);
    }

    .feature-icon {
        font-size: 4rem;
        animation: pulse 2s ease-in-out infinite;
    }

        .feature-icon i {
            filter: drop-shadow(0 4px 8px rgba(0,0,0,0.2));
        }

    /* Text mai vizibil */
    .feature-card .card-title {
        color: #1a1a2e;
        font-weight: 700;
    }

    .feature-card .card-text {
        color: #2d3748;
        font-weight: 500;
    }

    /* Gradient Text mai vizibil */
    .gradient-text {
        color: white !important;
        -webkit-text-fill-color: white;
        text-shadow: 3px 3px 6px rgba(0,0,0,0.5);
        font-weight: 800;
    }

    /* Text pentru subtitle */
    .text-muted {
        color: rgba(255, 255, 255, 0.95) !important;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.3);
        font-weight: 500;
    }

    /* Fundal body mai deschis */
    body {
        background: linear-gradient(135deg, #8b9dc3 0%, #a8b5d1 50%, #b8d4c8 100%);
        background-attachment: fixed;
        min-height: 100vh;
    }

    /* Hero section mai deschis */
    .hero-section {
        min-height: 90vh;
        background: linear-gradient(135deg, #8b9dc3 0%, #a8b5d1 50%, #b8d4c8 100%);
        position: relative;
        overflow: hidden;
    }

    .main-content-card {
        background: rgba(255, 255, 255, 0.05) !important; /* Aproape complet transparent (5%) */
        backdrop-filter: blur(5px); /* Efect de blur foarte fin */
        -webkit-backdrop-filter: blur(5px);
        border-radius: 30px;
        padding: 40px;
        border: 1px solid rgba(255, 255, 255, 0.1); /* Bordură aproape invizibilă */
        box-shadow: none !important; /* Eliminăm umbrele care pot crea halouri albe */
        margin-top: 20px;
    }
    .container {
        background: transparent !important;
    }

    /* Stil pentru Navbar să fie și el transparent */
    .navbar-custom {
        background: rgba(255, 255, 255, 0.1) !important;
        backdrop-filter: blur(10px);
        border: none !important;
    }

    input[type="file"], textarea, input[type="text"] {
        background: rgba(255, 255, 255, 0.7) !important;
        border-radius: 15px !important;
        border: 1px solid rgba(255, 255, 255, 0.5) !important;
    }
</style>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light navbar-custom shadow-sm">
            <div class="container-fluid px-4">
                <a class="navbar-brand fw-bold text-gradient fs-3" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-share-fill me-2"></i>SocialPlatformTime
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Posts" asp-action="Index">Show Posts</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Posts" asp-action="New">Add Post</a>
                            </li>

                            @if (User.IsInRole("Administrator"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link fw-bold text-primary" asp-controller="ApplicationUsers" asp-action="Index">Manage Users</a>
                                </li>
                            }
                        }
                    </ul>
                    <div class="d-flex align-items-center user-panel rounded-pill px-3 py-1">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="main-content-card pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-custom text-center py-4 mt-5">
        <div class="container">
            &copy; 2025 - <span class="fw-bold">SocialPlatformTime</span> -
            <a class="text-decoration-none" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>