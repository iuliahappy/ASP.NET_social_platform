
<br />
<h2 class="text-center">COMMENTS</h2>

<br />

@if (ViewBag.Message != null)
{

    <h2 class="alert alert-success p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}

<br />


<form asp-controller="Comments" asp-action="New" method="post">
    <input type="hidden" name="PostId" value="@ViewBag.PostId" />
    <textarea name="CommentBody"></textarea>
    <button type="submit">Add a comment</button>
</form>

@foreach (var comm in ViewBag.Comments)
{
    <div>
        <p>Time: @comm.Date</p>
        <p>Comment: @comm.CommentBody</p>
        <form asp-action="Delete" asp-controller="Comments" method="post">
            <input type="hidden" name="Id" value="@comm.Id" />
            <button type="submit" onclick="return confirm('Are you sure you want to delete this comment?');">
                Delete
            </button>
        </form>
    </div>

    <br />
    <br />
}

