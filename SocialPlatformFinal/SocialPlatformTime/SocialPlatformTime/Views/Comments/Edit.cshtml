@model SocialPlatformTime.Models.Comment


<h2>Editare comentariu</h2>
<br />


<form asp-action="Edit" asp-controller="Comments" asp-route-id="@Model.Id" method="post">

    <div class="form-group">
        <label asp-for="CommentBody" class="form-label">Comment Content</label>
        <br />
        <textarea asp-for="CommentBody" class="form-control"></textarea>
        <span asp-validation-for="CommentBody" class="text-danger"></span>
    </div>

    <br /><br />

    <button class="btn btn-primary" type="submit">Editează comentariul</button>

</form>

