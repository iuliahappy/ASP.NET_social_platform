@model IEnumerable<IGrouping<string, SocialPlatformTime.Models.RoleTable>>

<style>
    .request-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border: 1px solid #eee !important;
        border-radius: 15px !important;
    }

        .request-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.08) !important;
        }

    .group-header {
        background: linear-gradient(45deg, #f8f9fa, #ffffff);
        border-radius: 12px;
        padding: 10px 20px;
        margin-bottom: 15px;
        border-left: 5px solid #0d6efd;
    }

    .user-avatar {
        object-fit: cover;
        border: 2px solid #fff;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 px-3">
        <div>
            <h3 class="fw-bold mb-0">Management Center</h3>
            <p class="text-muted">Review and approve requests for your groups</p>
        </div>
        <span class="badge bg-primary rounded-pill px-3 py-2">
            @Model.Sum(g => g.Count()) Total Requests
        </span>
    </div>

    @if (TempData["messageSend"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm mb-4 mx-3" role="alert" style="border-radius: 12px;">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["messageSend"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="bi bi-person-check text-light-emphasis" style="font-size: 4rem;"></i>
            </div>
            <h5 class="text-muted">All caught up!</h5>
            <p class="text-muted small">There are no pending requests for the groups you own.</p>
            <a asp-action="Index" class="btn btn-outline-primary rounded-pill mt-2">Discover Groups</a>
        </div>
    }

    @foreach (var group in Model)
    {
        <div class="mb-5">
            <div class="group-header shadow-sm d-flex align-items-center mx-3">
                <i class="bi bi-people-fill text-primary me-3"></i>
                <h5 class="mb-0 fw-bold text-dark">@group.Key</h5>
            </div>

            <div class="row g-3 px-3">
                @foreach (var request in group)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 request-card border-0 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <img src="https://ui-avatars.com/api/?name=@(request.ApplicationUser?.UserName ?? "User")&background=random&bold=true"
                                         class="rounded-circle user-avatar me-3" width="50" height="50">
                                    <div class="overflow-hidden">
                                        <h6 class="mb-0 fw-bold text-truncate">@request.ApplicationUser?.UserName</h6>
                                        <small class="text-muted">Wants to join</small>
                                    </div>
                                </div>

                                <div class="d-flex gap-2">
                                    <form asp-action="AcceptRequest" asp-route-requestId="@request.Id" method="post" class="flex-grow-1">
                                        <button type="submit" class="btn btn-primary btn-sm w-100 rounded-pill">
                                            Accept
                                        </button>
                                    </form>
                                    <form asp-action="DeclineRequest" asp-route-requestId="@request.Id" method="post" class="flex-grow-1">
                                        <button type="submit" class="btn btn-outline-danger btn-sm w-100 rounded-pill">
                                            Decline
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>