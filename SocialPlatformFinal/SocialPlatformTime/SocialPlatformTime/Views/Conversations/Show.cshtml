@using System.Text.Encodings.Web
@model IEnumerable<SocialPlatformTime.Models.Message>

@{
    ViewData["Title"] = "Conversation";
    var currentUserId = ViewBag.CurrentUserId as string;
    // Verificăm dacă este un grup pentru a afișa descrierea
    bool isGroup = ViewBag.GroupId != null;
}

<div class="container mt-4 pb-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="d-flex align-items-center mb-1">
                        <h4 class="mb-0 me-2">Chat</h4>
                        
                        @* Butoane de gestiune grup (Edit & Delete) *@
                        @if (isGroup && (User.IsInRole("Administrator") || (ViewBag.IsOwner != null && (bool)ViewBag.IsOwner == true)))
                        {
                            <div class="d-flex gap-2">
                                <button class="btn btn-sm btn-link text-white p-0 opacity-75 text-decoration-none"
                                        onclick="openEditDescriptionModal()" title="Edit description">
                                    <i class="bi bi-pencil-square"></i> <small>Edit</small>
                                </button>

                                <form asp-controller="Groups" asp-action="Delete" asp-route-id="@ViewBag.GroupId" method="post"
                                      onsubmit="return confirm('WARNING: Are you sure you want to delete this group? This will remove all messages and roles permanently.');">
                                    <button type="submit" class="btn btn-sm btn-link text-white p-0 opacity-75 text-decoration-none hover-danger">
                                        <i class="bi bi-trash"></i> <small>Delete Group</small>
                                    </button>
                                </form>
                            </div>
                        }
                    </div>

                    @* Description appears ONLY if it is a group *@
                    @if (isGroup)
                    {
                        <p class="mb-0 small opacity-75" style="font-size: 0.85rem; max-width: 85%;">
                            <i class="bi bi-info-circle me-1"></i>
                            @(ViewBag.GroupDescription ?? "This group has no description set.")
                        </p>
                    }
                </div>
                <a asp-controller="Conversations" asp-action="Index" class="btn btn-sm btn-outline-light px-3 rounded-pill">Back</a>
            </div>
        </div>

        <div id="chatWindow" class="card-body" style="height: 500px; overflow-y: auto; background-color: #f0f2f5;">
            @foreach (var message in Model)
            {
                bool isMine = message.ApplicationUserId == currentUserId;

                <div class="d-flex @(isMine ? "justify-content-end" : "justify-content-start") mb-3">
                    <div class="p-3 shadow-sm @(isMine ? "bg-primary text-white rounded-chat-mine" : "bg-white text-dark rounded-chat-other")"
                         style="max-width: 75%; min-width: 140px;">

                        @if (!isMine)
                        {
                            <small class="d-block font-weight-bold mb-1" style="font-size: 0.75rem; color: #007bff;">
                                @message.ApplicationUser?.UserName
                            </small>
                        }

                        <p class="mb-1 text-break">@message.Content</p>

                        <div class="d-flex justify-content-end align-items-center mt-1 pt-1 @(isMine ? "text-white-50" : "text-muted")" style="border-top: 1px solid rgba(0,0,0,0.05)">

                            @if (isMine)
                            {
                                <button type="button" class="btn btn-link btn-sm p-0 me-2 text-reset text-decoration-none opacity-75 edit-link"
                                        onclick="openEditModal(@message.Id, '@Html.Raw(JavaScriptEncoder.Default.Encode(message.Content))')">
                                    <small>Edit</small>
                                </button>

                                <form asp-controller="Messages" asp-action="Delete" asp-route-id="@message.Id" method="post"
                                      class="me-2" onsubmit="return confirm('Are you sure you want to delete this message?');">
                                    <button type="submit" class="btn btn-link btn-sm p-0 text-reset text-decoration-none opacity-75 delete-link">
                                        <small>Delete</small>
                                    </button>
                                </form>
                            }

                            <small style="font-size: 0.65rem;">
                                @message.dateTime.ToString("HH:mm")
                            </small>

                            @if (isMine && message.IsRead)
                            {
                                <span class="ms-1 fw-bold" style="font-size: 0.85rem; color: #4fc3f7;" title="Seen by everyone">✔✔</span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="card-footer bg-white border-top-0 py-3">
            <form asp-controller="Messages" asp-action="New" method="post" class="input-group">
                <input type="hidden" name="ConversationId" value="@ViewBag.ConversationId" />
                <input type="text" name="Content" class="form-control border-0 bg-light rounded-pill px-3"
                       placeholder="Write a message..." required autocomplete="off">
                <button type="submit" class="btn btn-primary rounded-pill ms-2 px-4 shadow-sm">Send</button>
            </form>
        </div>
    </div>
</div>

@* Modals *@
<div class="modal fade" id="editMessageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg border-0">
            <div class="modal-header">
                <h5 class="modal-title">Edit Message</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-controller="Messages" asp-action="Edit" method="post">
                <div class="modal-body">
                    <input type="hidden" id="editMessageId" name="id" />
                    <textarea class="form-control bg-light" id="editMessageContent" name="content" rows="4" required style="resize: none;"></textarea>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@if (isGroup)
{
    <div class="modal fade" id="editDescriptionModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow-lg border-0">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Group Description</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form asp-controller="Groups" asp-action="ModifyDescription" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="groupId" value="@ViewBag.GroupId" />
                        <textarea class="form-control bg-light" name="newDescription" rows="4"
                                  required style="resize: none;" placeholder="Enter new description...">@ViewBag.GroupDescription</textarea>
                    </div>
                    <div class="modal-footer border-0">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary px-4">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<style>
    .rounded-chat-mine { border-radius: 18px 18px 0px 18px !important; }
    .rounded-chat-other { border-radius: 18px 18px 18px 0px !important; }
    .edit-link:hover, .delete-link:hover { opacity: 1 !important; text-decoration: underline !important; }
    #chatWindow::-webkit-scrollbar { width: 6px; }
    #chatWindow::-webkit-scrollbar-thumb { background-color: rgba(0,0,0,0.1); border-radius: 10px; }
    
    .hover-danger:hover { color: #dc3545 !important; opacity: 1 !important; }

    .modal { z-index: 1060 !important; }
    .modal-backdrop { z-index: 1050 !important; }
</style>

@section Scripts {
    <script>
        function openEditModal(id, content) {
            var modalEl = document.getElementById('editMessageModal');
            document.getElementById('editMessageId').value = id;
            document.getElementById('editMessageContent').value = content;
            document.body.appendChild(modalEl);
            new bootstrap.Modal(modalEl).show();
        }

        function openEditDescriptionModal() {
            var modalEl = document.getElementById('editDescriptionModal');
            if(modalEl) {
                document.body.appendChild(modalEl);
                new bootstrap.Modal(modalEl).show();
            }
        }

        document.addEventListener("DOMContentLoaded", function() {
            var chatWindow = document.getElementById("chatWindow");
            chatWindow.scrollTop = chatWindow.scrollHeight;
        });
    </script>
}